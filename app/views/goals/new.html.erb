<h2>Create Your Number One Goal</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :wish %><br />
    <%= f.text_field :wish, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :outcome %><br />
    <%= f.text_area :outcome, autofocus: true, size: "24x6" %>
  </div>

  <div class="field">
    <%= f.label :obstacle %><br />
    <%= f.text_area :obstacle, autofocus: true, size: "24x6" %>
  </div>

  <div class="field">
    <%= f.label :task %><br />
    <%= f.text_field :task, autofocus: true %>
  </div>


  <br>

  <div class="actions">
    <%= f.submit "Create Goal" %>
  </div>
<% end %>

<hr>

<%= render "devise/shared/links" %>
